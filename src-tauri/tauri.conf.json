{
  "productName": "edulinker_messenger",
  "version": "0.1.3",
  "identifier": "kr.schoolworks.edulinker",
  "build": {
    "beforeDevCommand": "pnpm dev:web",
    "beforeBuildCommand": "pnpm run build:web",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "edulinker_messenger",
        "label": "main",
        "width": 500,
        "height": 940,
        "minWidth": 500,
        "minHeight": 600,
        "decorations": false,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "dmg", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://s3.ap-northeast-1.wasabisys.com/edulinkermessenger/updates/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlBOTAzREY0MEE4REU0NjEKUldSaDVJMEs5RDJRbWlFb09GempMNElmSE4vU3h3bVZWcGtWTXl2MENYNUpvNGxvS1VIKzFRTW4K"
    }
  }
}
